    active_workspace    #333333 #222222 #FF2E81
    inactive_workspace  #333333 #222222 #FFFFFF
    urgent_workspace    #FF77E4 #B655A3 #FFFFFF
    binding_mode        #FF77E4 #B655A3 #FFFFFF
  }

  status_command py3status
  position top
  font pango:DejaVu Sans Mono 8
}

